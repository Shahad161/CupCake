<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/medalSpace"
    android:background="@color/darkBlue2"
    tools:context=".fragments.HomeFragment">

    <ImageButton
        android:id="@+id/btn_toSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/smallSpace"
        android:background="@color/darkBlue2"
        android:src="@drawable/ic_baseline_search_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightofConstraint"
        android:layout_marginBottom="@dimen/largeSpace"
        android:background="@drawable/cardshape"
        android:elevation="@dimen/Elevation"
        android:padding="@dimen/medalSpace"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/countryMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/smallSpace"
            android:text="@string/country"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize"
            app:layout_constraintBottom_toTopOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/smallSpace"
            android:src="@drawable/ic_baseline_people_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/countryMax"
            app:layout_constraintTop_toBottomOf="@+id/countryMax" />
        <TextView
            android:id="@+id/populationMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/smallSpace"
            android:text="@string/maxpopulation"
            android:textColor="@color/lightGray"
            android:textSize="@dimen/textofpopulation"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toEndOf="@+id/imageView2" />
        <TextView
            android:id="@+id/tv_longitudeMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/smallSpace"
            android:text="@string/longitude"
            android:textColor="@color/lightGray"
            android:textSize="@dimen/textsizeoflan_lat"
            app:layout_constraintStart_toStartOf="@+id/longitudeMaxNum"
            app:layout_constraintTop_toBottomOf="@+id/longitudeMaxNum"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:id="@+id/longitudeMaxNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/largeSpace"
            android:paddingEnd="@dimen/smallSpace"
            android:text="@string/text_lat_lan"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_lat_lan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:id="@+id/tv_LatitudeMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/smallSpace"
            android:text="@string/latitude"
            android:textColor="@color/lightGray"
            android:textSize="@dimen/textsizeoflan_lat"
            app:layout_constraintStart_toStartOf="@+id/LatitudeMaxNum"
            app:layout_constraintTop_toBottomOf="@+id/LatitudeMaxNum" />
        <TextView
            android:id="@+id/LatitudeMaxNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/smallSpace"
            android:paddingEnd="@dimen/smallSpace"
            android:text="@string/text_lat_lan"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_lat_lan"
            app:layout_constraintStart_toStartOf="@+id/tv_longitudeMax"
            app:layout_constraintTop_toBottomOf="@+id/tv_longitudeMax"
            tools:ignore="RtlSymmetry" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightofConstraint"
        android:layout_marginBottom="@dimen/medalSpace"
        android:background="@drawable/cardshape"
        android:elevation="@dimen/smallSpace"
        android:padding="@dimen/medalSpace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/countryMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/smallSpace"
            android:text="@string/country"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:id="@+id/populationMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/smallSpace"
            android:text="@string/minpopulation"
            android:textColor="@color/lightGray"
            android:textSize="@dimen/textofpopulation"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView" />
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medalSpace"
            android:src="@drawable/ic_baseline_people_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/countryMin"
            app:layout_constraintTop_toBottomOf="@+id/countryMin" />
        <TextView
            android:id="@+id/tv_longitudeMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/smallSpace"
            android:text="@string/longitude"
            android:textColor="@color/lightGray"
            android:textSize="@dimen/textsizeoflan_lat"
            app:layout_constraintStart_toStartOf="@+id/longitudeMinNum"
            app:layout_constraintTop_toBottomOf="@+id/longitudeMinNum" />
        <TextView
            android:id="@+id/longitudeMinNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/largeSpace"
            android:paddingEnd="@dimen/smallSpace"
            android:text="@string/text_lat_lan"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_lat_lan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:id="@+id/tv_LatitudeMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/smallSpace"
            android:text="@string/latitude"
            android:textColor="@color/lightGray"
            android:textSize="@dimen/textsizeoflan_lat"
            app:layout_constraintStart_toStartOf="@+id/LatitudeMinNum"
            app:layout_constraintTop_toBottomOf="@+id/LatitudeMinNum" />
        <TextView
            android:id="@+id/LatitudeMinNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/smallSpace"
            android:paddingEnd="@dimen/smallSpace"
            android:text="@string/text_lat_lan"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_lat_lan"
            app:layout_constraintStart_toStartOf="@+id/longitudeMinNum"
            app:layout_constraintTop_toBottomOf="@+id/tv_longitudeMin"
            tools:ignore="RtlSymmetry" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.razerdp.widget.animatedpieview.AnimatedPieView
        android:id="@+id/PieChart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zeroSpace"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_toSearch" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightofAnimation"
        app:layout_constraintBottom_toBottomOf="@+id/PieChart"
        app:layout_constraintEnd_toEndOf="@+id/PieChart"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/PieChart"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/earth" />
</androidx.constraintlayout.widget.ConstraintLayout>