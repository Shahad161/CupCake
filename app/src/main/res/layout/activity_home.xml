<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/gray2"
    tools:context=".ui.HomeActivity">

    <ImageButton
        android:id="@+id/btn_toSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/smallSpace"
        android:layout_marginBottom="8dp"
        android:background="@color/gray2"
        android:src="@drawable/ic_baseline_search_24"
        app:layout_constraintBottom_toTopOf="@+id/PieChart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="20dp"
        app:cardElevation = "5dp"
        app:cardBackgroundColor = "@color/darkBlue"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/cardshape"
            android:padding="32dp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_countryMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/smallSpace"
                android:text="Iraq, Baghdad"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/imageView2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/smallSpace"
                android:src="@drawable/ic_baseline_people_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_countryMax"
                app:layout_constraintTop_toBottomOf="@+id/tv_countryMax" />

            <TextView
                android:id="@+id/tv_populationMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/smallSpace"
                android:text="4,856,736 M"
                android:textColor="@color/smallText"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintStart_toEndOf="@+id/imageView2" />


            <TextView
                android:id="@+id/tv_longitudeMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/smallSpace"
                android:text="@string/longitude"
                android:textColor="@color/smallText"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/tv_longitudeMaxNum"
                app:layout_constraintTop_toBottomOf="@+id/tv_longitudeMaxNum" />

            <TextView
                android:id="@+id/tv_longitudeMaxNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/smallSpace"
                android:layout_marginEnd="16dp"
                android:paddingEnd="@dimen/smallSpace"
                android:text="343.5457"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_LatitudeMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/smallSpace"
                android:text="@string/latitude"
                android:textColor="@color/smallText"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/tv_LatitudeMaxNum"
                app:layout_constraintTop_toBottomOf="@+id/tv_LatitudeMaxNum" />

            <TextView
                android:id="@+id/tv_LatitudeMaxNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/smallSpace"
                android:paddingEnd="@dimen/smallSpace"
                android:text="343.5457"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/tv_longitudeMax"
                app:layout_constraintTop_toBottomOf="@+id/tv_longitudeMax" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="@dimen/smallSpace"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor = "@color/darkBlue"
        app:cardElevation = "5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="@dimen/smallSpace"
            android:background="@drawable/cardshape"
            android:padding="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="16dp">

            <TextView
                android:id="@+id/tv_countryMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/smallSpace"
                android:text="Iraq, Baghdad"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tv_populationMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="4,856,736 M"
                android:textColor="@color/smallText"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintStart_toEndOf="@+id/imageView" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/smallSpace"
                android:src="@drawable/ic_baseline_people_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_countryMin"
                app:layout_constraintTop_toBottomOf="@+id/tv_countryMin" />

            <TextView
                android:id="@+id/tv_longitudeMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/smallSpace"
                android:text="@string/longitude"
                android:textColor="@color/smallText"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/tv_longitudeMinNum"
                app:layout_constraintTop_toBottomOf="@+id/tv_longitudeMinNum" />

            <TextView
                android:id="@+id/tv_longitudeMinNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/smallSpace"
                android:layout_marginEnd="16dp"
                android:paddingEnd="@dimen/smallSpace"
                android:text="343.5457"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_LatitudeMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/smallSpace"
                android:text="@string/latitude"
                android:textColor="@color/smallText"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/tv_LatitudeMinNum"
                app:layout_constraintTop_toBottomOf="@+id/tv_LatitudeMinNum" />

            <TextView
                android:id="@+id/tv_LatitudeMinNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/smallSpace"
                android:paddingEnd="@dimen/smallSpace"
                android:text="343.5457"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/tv_longitudeMinNum"
                app:layout_constraintTop_toBottomOf="@+id/tv_longitudeMin" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <com.razerdp.widget.animatedpieview.AnimatedPieView
        android:id="@+id/PieChart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_toSearch" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        app:layout_constraintBottom_toBottomOf="@+id/PieChart"
        app:layout_constraintEnd_toEndOf="@+id/PieChart"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/PieChart"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/earth" />


</androidx.constraintlayout.widget.ConstraintLayout>